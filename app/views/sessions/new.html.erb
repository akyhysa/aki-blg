

<div class="login">
  <div class="login-triangle"></div>
  <h2 class="login-header">Log in for AKI Blog</h2>
  <div class="login-container">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <p><%= f.label :email %><p>
      <p><%= f.email_field :email, placeholder: "Enter your email address" %><p>
      <p><%= f.label :password %><p>
      <p><%= f.password_field :password, placeholder: "Enter your password" %><p>
      <p><%= f.submit "Log in" %><p>
      <p><%= link_to '[ Cancel and return to articles listing ]', articles_path %><p>
    <% end %>
  </div>
</div>