<h1></h1>

<div>
  <div class="login">
    <div class="login-triangle"></div>
    <h1 class="login-header">Alpha Bloggers</h1>
    <div class="login-container">
      <div class="img-profile">
        <div>
          <% @users.each do |user| %>
            <div>
              <div>
                <div>
                  <div>
                    <h1><%= link_to user.username, user %></h1>
                  </div>
                  <div>
                    <h5>
                      <%= link_to gravatar_for(user, size: 150), user %>
                    </h5>
                    <p><%= pluralize(user.articles.count, "article") %></p>
                    <h2><%= link_to "View profile", user %></h2>
                    <% if logged_in? %>
                      <% if user == current_user %>
                        <h2><%= link_to "Edit profile", edit_user_path(user) %></h2>
                      <% end %>
                      <% if current_user.admin? %>
                        <h2><%= link_to "Delete profile", user_path(current_user), method: :delete, data: { confirm: "Are you sure?" } %></h2>
                      <% end %>
                    <% end %>
                  </div>
                  <div>
                    <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



